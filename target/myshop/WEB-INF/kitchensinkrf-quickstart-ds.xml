<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
    <!-- The datasource is bound into JNDI at this location. We reference
       this in META-INF/test-persistence.xml -->
    <datasource jndi-name="java:jboss/datasources/mysql"
                pool-name="mysql" enabled="true"
                use-java-context="true">
        <connection-url>jdbc:mysql://127.0.0.1:3306/mysql?generateSimpleParameterMetadata=true</connection-url>
        <driver>mysql</driver>
        <security>
            <user-name>root</user-name>
            <password>123456</password>
        </security>
    </datasource>
</datasources>


